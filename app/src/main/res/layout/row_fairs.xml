<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="45dp">

    <TextView
        android:id="@+id/fair_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="45dp"
        android:text="fair_name"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fair_location_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="fair_location"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/fair_name_text_view"
        app:layout_constraintTop_toBottomOf="@+id/fair_name_text_view" />

    <TextView
        android:id="@+id/fair_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="24dp"
        android:text="fair_date"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/fair_location_text_view"
        app:layout_constraintTop_toBottomOf="@+id/fair_name_text_view" />
</androidx.constraintlayout.widget.ConstraintLayout>