<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.europesip.comerciales_ferias"
    android:targetSandboxVersion="2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="30" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.europesip.comerciales_ferias.SearchContacts" />
        <activity android:name="com.europesip.comerciales_ferias.ContactsList" />
        <activity android:name="com.europesip.comerciales_ferias.SingleContactDetail" />
        <activity android:name="com.europesip.comerciales_ferias.TermsActivity" />
        <activity
            android:name="com.europesip.comerciales_ferias.MyContacts"
            android:label="@string/title_activity_my_contacts"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.europesip.comerciales_ferias.ProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.europesip.comerciales_ferias.FairsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.europesip.comerciales_ferias.NewContactActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.europesip.comerciales_ferias.MenuActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.europesip.comerciales_ferias.MainActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>